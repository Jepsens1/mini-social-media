{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "default": {
            "format": "[%(levelname)s|%(module)s|L%(lineno)d] %(asctime)s : %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M-%S%z"
        },
        "json": {
            "()": "logger.JSONFormatter",
            "fmt_keys": {
                "level": "levelname",
                "message": "message",
                "timestamp": "timestamp",
                "logger": "name",
                "module": "module",
                "function": "funcName",
                "line": "lineno",
                "thread_name": "threadName"
            }
        }
    },
    "filters": {
        "info_filter": {
            "()": "logger.MaxLevelFilter"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "default",
            "filters": ["info_filter"],
            "stream": "ext://sys.stdout"
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "default",
            "stream": "ext://sys.stderr"
        },
        "file": {
           "class": "logging.handlers.RotatingFileHandler",
           "level": "DEBUG",
           "formatter": "json",
           "filename": "logs/app.log.jsonl",
           "maxBytes": 10485760,
           "backupCount": 3
        }
    },
    "loggers": {
        "uvicorn.error": {
            "handlers": ["stderr", "file"],
            "level": "INFO",
            "propagate": false
        },
        "uvicorn.access": {
            "handlers": ["stdout", "file"],
            "level": "INFO",
            "propagate": false
        },
        "uvicorn": {
            "handlers": ["stdout", "file"],
            "level": "INFO",
            "propagate": false
        },
        "root": {
            "handlers": ["stdout", "stderr", "file"],
            "level": "DEBUG"
        }
    }
}